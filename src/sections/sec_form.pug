.container.comment_and_form-cont                 
  section.form-sec#sec-form
    h2.title.form__title Связаться со мной
    form(autocomplete="off").form
      .form__row
        label.form__box.form__box-margin
          p.text.form__text Введите ваше имя
          input(required name="name" type="text").form__inp
          +icon('user','form__inp-icon')
        label.form__box
          p.text.form__text Введите ваш e-mail
          input(required name="e-mail" type="email").form__inp
          +icon('envelope','form__inp-icon')
      .form__row
        label.form__box
          p.text.form__text.m_t Сообщение к письму
          textarea(required name="comment" type="text").form__message
          +icon('message','form__inp-icon') 
      .form__row
        button(type="submit").btn отправить 